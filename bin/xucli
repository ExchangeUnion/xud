#!/usr/bin/env node

require('yargs')
  .options({
    rpc: {
      hidden: true,
    },
    'rpc.port': {
      alias: 'p',
      default: 8886,
      describe: 'RPC service port',
      type: 'number',
    },
    'rpc.host': {
      alias: 'h',
      default: 'localhost',
      describe: 'RPC service hostname',
      type: 'string',
    },
  })
  .commandDir('../dist/cli/commands')
  .demandCommand(1, '')
  .strict()
  .argv; // we must read the argv property for the command line args to initialize properly
