#!/usr/bin/env node

require('yargs')
  .options({
    'rpc.port': {
      alias: 'p',
      default: 8886,
      describe: 'The RPC service port',
      type: 'number',
    },
    'rpc.host': {
      alias: 'h',
      default: 'localhost',
      describe: 'The RPC service hostname',
      type: 'string',
    },
  })
  .commandDir('../dist/lib/cli/commands')
  .argv; // we must read the argv property for the command line args to initialize properly
