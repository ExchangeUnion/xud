          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/xudrpcListCurrenciesResponse"
            }
          }
        },
        "tags": [
          "Xud"
        ]
      }
    },
    "/v1/disconnect": {
      "post": {
