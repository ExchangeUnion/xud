        "balance": {
          "type": "string",
          "format": "int64",
          "title": "Sum of channels balances denominated in satoshis or equivalent"
        },
        "pending_open_balance": {
          "type": "string",
          "format": "int64",
          "title": "Sum of channels pending balances denominated in satoshis or equivalent"
        }
      }
