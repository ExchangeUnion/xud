      "type": "object",
      "properties": {
        "role": {
          "type": "string"
        },
        "sending_amount": {
          "type": "string",
          "format": "uint64"
        },
        "sending_token": {
          "type": "string"
        },
        "receiving_amount": {
          "type": "string",
          "format": "uint64"
        },
        "receiving_token": {
          "type": "string"
        },
        "node_pub_key": {
          "type": "string"
        }
      }
    }
